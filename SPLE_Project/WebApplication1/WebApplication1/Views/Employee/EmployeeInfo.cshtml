@model WebApplication1.Models.EmployeeModel
<body>
    <br />
    <br />
    <div class="container">
        <h2>Employee Info</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Employee Name</td>
                    <td>Salary</td>
                    <td>Insurance</td>
                </tr>
            </thead>
            <tbody>

                <tr>
                    @if (Model.emp != null)
                    {
                        <td>@Model.emp.User.SingleOrDefault(x=> x.EmployeeID == Model.emp.EmployeeId).FullName</td>
                        <td>@Model.emp.Salary</td>
                        <td>@Model.emp.Insurence.SingleOrDefault(x=> x.InsuranceID == Model.emp.InsuranceId).InsuranceType /  @Model.emp.Insurence.SingleOrDefault(x=> x.InsuranceID == Model.emp.InsuranceId).Status</td>
                    }

                </tr>

            </tbody>

        </table>
        <br />
        <br />

    </div>
</body>