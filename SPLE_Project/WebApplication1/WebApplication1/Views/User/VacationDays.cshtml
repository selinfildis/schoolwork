<div class="container">
    <h2>Request Vacation</h2>

    <table id="myTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Previous Requests</td>
                <td>Date</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in ViewBag.VacationDay)
            {
                <tr>
                    <td>@element.Request</td>
                    <td>@element.CreateDate</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
<br />
<br />
<div class="container">
    <form id="form">
        <div class="form-group">
            <label for="VacationType"> Vacation Type</label>
            <select name="VacationType">
                <option></option>
                <option value="1">Report</option>
                <option value="2">Other Day off</option>
                <option></option>
            </select>
        </div>
        <div class="form-group">
            <label for="VacationDay"> Vacation Day</label>
           <input type="datetime" name="VacationDate"/>
           <input type="hidden" name="UserId" value="@ViewBag.User.UserID">
        </div>

    </form>
    <button class="btn btn-success">Add</button>
</div>
<script>

    $(document).ready(function(){
        $('#mytable').DataTable();

    });
</script>